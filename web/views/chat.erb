<% if private_mode %>
  <section class="full-screen-section full-screen-section--chat chat-panel--disabled" aria-live="polite">
    <p class="chat-disabled-message">Chat is unavailable while private mode is enabled.</p>
  </section>
<% else %>
  <section class="full-screen-section full-screen-section--chat">
    <%= erb :"shared/_chat_panel", locals: { full_screen: true } %>
  </section>
<% end %>
