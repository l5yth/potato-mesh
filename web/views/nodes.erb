<% page_title_html = Rack::Utils.escape_html(page_title) %>
<% body_classes = [] %>
<% body_classes << "dark" if initial_theme == "dark" %>
<% role_color_css = Rack::Utils.escape_html(role_color) %>
<% long_name_title_html = Rack::Utils.escape_html(long_name_title) %>
<% long_name_html = Rack::Utils.escape_html(long_name_text) %>
<html lang="en" data-theme="<%= initial_theme %>">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= page_title_html %></title>
  <link rel="stylesheet" href="/assets/styles/base.css" />
  <script src="/assets/js/theme.js" defer></script>
</head>
<body class="<%= body_classes.join(" ") %>" data-theme="<%= initial_theme %>">
  <main class="node-view">
    <h1 class="node-view__title">
      <span class="short-name" style="background:<%= role_color_css %>" title="<%= long_name_title_html %>"><%= short_name_badge_html %></span>
      <span class="node-view__long"><%= long_name_html %></span>
    </h1>
  </main>
</body>
</html>
